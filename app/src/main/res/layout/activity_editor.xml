<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0E0E0"
    tools:context="com.kenny.android.reminderapp.EditorActivity">


    <TextView
        android:id="@+id/heading"
        android:text="My Reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/display_display"
        android:layout_below="@+id/heading"
        android:layout_marginTop="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/lTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:hint="Enter Title"
        android:background="#FFFFFF"
        />

    <EditText
        android:id="@+id/lWishEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lTitleEditText"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:minLines="3"
        android:gravity="center"
        android:textColor="#000000"
        android:hint="Enter a reminder...."
        android:background="#FFFFFF"
        />

    <EditText
        android:id="@+id/ltxtDateEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lWishEditText"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="false"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:hint="DD-MM-YYY"
        />
    <EditText
        android:id="@+id/ltxtTimeEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ltxtDateEntered"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:textColor="#000000"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal"
        android:hint="00:00" />
    <ImageView
        android:id="@+id/imageGen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ltxtTimeEntered"
        android:layout_marginTop="10dp"/>


</RelativeLayout>

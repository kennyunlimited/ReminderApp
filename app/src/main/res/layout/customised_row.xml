<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/lThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_menu_agenda" />

    <TextView
        android:id="@+id/lTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/lThumbnail"
        android:text="Reminder Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lTitleTextView"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/lThumbnail"
        android:text="Date"
        android:textSize="15sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/lThumbnail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_notification_alarm"/>
</RelativeLayout>
